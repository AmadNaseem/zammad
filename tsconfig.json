{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "jsx": "preserve",
    "sourceMap": true,
    "removeComments": true,
    "noEmit": true,
    "importHelpers": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@mobile/*": ["app/frontend/apps/mobile/*"],
      "@shared/*": ["app/frontend/shared/*"],
      "@tests/*": ["app/frontend/tests/*"],
      "@stories/*": ["app/frontend/stories/*"],
      "@/*": ["app/frontend/*"],
      "*": ["node_modules/*", ".storybook/node_modules/*"],
      "react": [".storybook/config/types__react"]
    },
    "types": [
      "vite/client",
      "vite-plugin-svg-icons/client",
      "vitest/globals",
      "node"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["app/frontend/**/*", ".storybook/config/**/*"],
  "exclude": ["node_modules", "public", "vendor"]
}
